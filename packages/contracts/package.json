{
  "name": "ethereum-monument-contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "mud build",
    "clean": "forge clean && shx rm -rf src/**/codegen",
    "deploy:local": ". ./set-env.sh local && mud deploy --alwaysRunPostDeploy --profile=$FOUNDRY_PROFILE --worldAddress=$WORLD_ADDRESS",
    "deploy:redstone": ". ./set-env.sh redstone && mud deploy --alwaysRunPostDeploy --profile=$FOUNDRY_PROFILE --worldAddress=$WORLD_ADDRESS --kms",
    "admin:blueprint:local": ". ./set-env.sh local && forge script SetBlueprint --sig 'run(string)'",
    "admin:blueprint:redstone": ". ./set-env.sh redstone && forge script SetBlueprint --aws --sig 'run(string)'",
    "encodeBlueprint": "tsx ./ts/scripts/encodeBlueprint.ts",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "mud test"
  },
  "dependencies": {
    "@dust/programs": "https://pkg.pr.new/dustproject/dust/@dust/programs@23745ca",
    "@dust/world": "https://pkg.pr.new/dustproject/dust/@dust/world@23745ca",
    "@latticexyz/cli": "2.2.23-b84bcc6141e8fecb564eaecfc6e60c764d91bf39",
    "@latticexyz/entrykit": "2.2.23-b84bcc6141e8fecb564eaecfc6e60c764d91bf39",
    "@latticexyz/schema-type": "2.2.23-b84bcc6141e8fecb564eaecfc6e60c764d91bf39",
    "@latticexyz/store": "2.2.23-b84bcc6141e8fecb564eaecfc6e60c764d91bf39",
    "@latticexyz/world": "2.2.23-b84bcc6141e8fecb564eaecfc6e60c764d91bf39",
    "@latticexyz/world-consumer": "2.2.23-b84bcc6141e8fecb564eaecfc6e60c764d91bf39",
    "solady": "^0.1.14"
  },
  "devDependencies": {
    "@types/big-json": "^3.2.5",
    "@types/node": "^22.15.19",
    "big-json": "^3.2.0",
    "forge-std": "github:foundry-rs/forge-std#77041d2ce690e692d6e03cc812b57d1ddaa4d505",
    "prettier": "3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "shx": "^0.4.0",
    "solhint": "^3.6.2",
    "solhint-config-mud": "2.2.23-b84bcc6141e8fecb564eaecfc6e60c764d91bf39",
    "solhint-plugin-mud": "2.2.23-b84bcc6141e8fecb564eaecfc6e60c764d91bf39",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "viem": "^2.33.0"
  }
}
